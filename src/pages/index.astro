  <section class="flex item-center justify-center">
    <div
      id="margin"
      class="border-2 border-slate-100 w-[100%] md:w-[100%] rounded-full"
    >
    </div>
  </section>

  <!--SPONSORS -->
  <div id="secondary-content" class="py-16 z-20 bg-white">
    <section id="sponsor-container" class="">
      <h1 class="text-center font-poppins text-4xl font-black pb-10 md:pb-16">
        SPONSORS
      </h1>
      <div
        id="sponsor-logo"
        class="flex flex-wrap items-center justify-center gap-10 lg:gap-20 pointer-events-none px-2"
      >
        <img
          src="/assets/sponsors/king-biryani-edited.png"
          alt="Royal Enfield"
          class="h-32 w-32"
        />
        <img src="/assets/sponsors/samadhan.jpg" alt="SOFTWARE SAMADHAN" class="h-32 w-32" />
        <img src="/assets/sponsors/sponsor2.png" alt="KTM" class="h-32 w-32" />
        <img
          src="/assets/sponsors/urbore.png"
          alt="URBORE"
          class="h-32 w-32"
        />
        <img
          src="/assets/sponsors/swaglok.png"
          alt="Swaglok Merchandise Partner"
