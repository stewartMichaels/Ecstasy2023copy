---
import Carousel from "../components/Carousel.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div
    id="wrapper" class="relative">
    <div id="background-img" class="-z-30"></div>

    <main
      id="primary-content"
      class="mx-auto w-full md:max-w-[1300px] relative z-19 flex flex-col mt-20 md:mt-0 md:pt-[10em] md:flex-row gap-1 md:gap-10 px-2 md:px-10">
      <div id="left-col" class="w-full md:w-6/12">
        <section id="hero">
          <h1 class="h1custom font-bold  text-white text-6xl font-playfair pb-2">
            Come Get Lost in the Madness!
          </h1>
          <span class="text-white uppercase font-black text-6xl lg:text-7xl pb-2"
            >ECSTASY23
          </span>
          <p class="text-3xl uppercase pt-2 text-white font-poppins">Cultural Festival</p>
        </section>
        <p class="instructions font-poppins w-full lg:w-[90%] text-white text-[0.9rem] md:text-[1.1rem]">
          Get ready for <strong>Ecstasy 2023</strong> - a cultural fest with trending activities, amazing performances and a vibe that rocks! Don't miss out on the good times.
        </p>
      </div>
      <div
        id="right-col"
        class=" grow flex flex-col justify-center lg:grid lg:grid-cols-2 gap-[0.5em] md:gap-[1em]">
        <div class="link-card card1 items-end font-poppins text-[0.9rem]">
          <a href="./events">
            <h2>
              <strong>CULTURAL EVENTS</strong>
              <span>&rarr;</span>
            </h2>
            <p>Participate in Variety of Events!</p>
          </a>
        </div>
        <div class="link-card card2 h-auto items-end font-poppins text-[0.9rem]">
          <a href="./contests">
            <h2>
              <strong>CONTESTS</strong> 
              <span>&rarr;</span>
            </h2>
            <p>Participate in Variety of Events!</p>
          </a>
        </div>
        <div class="link-card card3 h-auto items-end overflow-hidden font-poppins text-[0.9rem]">
          <a href="./sports" class="">
            <h2>
              <strong>SPORTS EVENTS</strong> 
              <span>&rarr;</span>
            </h2>
            <p>Participate in Variety of Events!</p>
          </a>
        </div>
      </div>
    </main>
    </div>

  <!--QUOTE -->
  <div id="quote" class="mt-[5em] md:mt-[10em] z-20 min-h-[15em] flex flex-col md:flex-row mx-auto p-5 pt-10 md:p-10 justify-center gap-10 md:gap-20 items-center bg-white">
    <section id="left-body" class="">
      <img src="/assets/board/director-image.jpeg" alt="organizer's image" class="rounded-full w-[14em] pointer-events-none">
    </section>
   <section id="right-body" class="w-full md:w-6/12">
      <p class="font-playfair italic font-light text-[1.2rem]">
        <blockquote class="text-black text-[1.1rem] italic border-l-4 pl-4 border-gray-300">
                <p class="mb-4">
                  "Welcome to Central Institute of Technology Kokrajhar, an
                  institute dedicated to providing quality education in
                  engineering, technology, and vocational training. Our focus is
                  on developing a research and development culture that leads to
                  more industry partnerships, innovation, and entrepreneurship.
                  We are committed to implementing the new education policy
                  (NEP2020) and building a network of excellence with knowledge
                  advancing partners to contribute to the progress of the region
                  and the nation. Join us in pursuing your objectives of life
                  and creating an intellectual society focused on socio-economic
                  growth."
                </p>
                <cite
                  >- Prof. Hemanta Kumar Kalita
                  <p class="text-gray-500">Director (i/c), CIT Kokrajhar</p>
                </cite>
              </blockquote>
      </p>
    </section>
  </div>
  <!-- Organizing Committee section -->
      <section class="bg-gray-100 pt-10 select-none pointer-events-none">
        <div class="container mx-auto px-4">
          <h2
            class="text-gray-800 mb-4 text-center pb-20 font-poppins text-4xl font-medium"
          >
          COMMITTEE MEMBERS
          </h2>
          <div class="flex flex-wrap -mx-4 text-center pb-20">
            <div class="w-full md:w-1/4 px-4 mb-8">
              <img
                src="/assets/organizing-committee/organizer1.jpeg"
                alt="Organizer 1"
                class="rounded-full w-32 h-32 object-cover mx-auto mb-4"
              />
              <h3 class="text-lg font-medium text-gray-800">Organizer 1</h3>
            </div>
            <div class="w-full md:w-1/4 px-4 mb-8">
              <img
                src="/assets/organizing-committee/organizer2.jpeg"
                alt="Organizer 2"
                class="rounded-full w-32 h-32 object-cover mx-auto mb-4"
              />
              <h3 class="text-lg font-medium text-gray-800">Organizer 2</h3>
            </div>
            <div class="w-full md:w-1/4 px-4 mb-8">
              <img
                src="/assets/organizing-committee/organizer3.jpeg"
                alt="Organizer 3"
                class="rounded-full w-32 h-32 object-cover mx-auto mb-4"
              />
              <h3 class="text-lg font-medium text-gray-800">Organizer 3</h3>
            </div>
            <div class="w-full md:w-1/4 px-4 mb-8">
              <img
                src="/assets/organizing-committee/organizer4.jpeg"
                alt="Organizer 4"
                class="rounded-full w-32 h-32 object-cover mx-auto mb-4"
              />
              <h3 class="text-lg font-medium text-gray-800">Organizer 4</h3>
            </div>
          </div>
        </div>
      </section>
  <!--SPONSORS -->
  <div id="secondary-content" class="pt-10 md:pt-[3em] z-20 bg-white">
      <section id="sponsor-container" class="">
        <!-- <Carousel/> -->
        <h1 class="text-center font-poppins text-4xl font-medium">SPONSORS</h1>
        <div id="sponsor-logo" class="flex justify-center items-center gap-10 lg:gap-20 pt-10 flex-wrap pointer-events-none">
          <img src="/assets/sponsors/sponsor1.png" alt="SBI" class="w-[9rem]">
          <img src="/assets/sponsors/sponsor2.png" alt="KTM" class="w-[9rem]">
          <img src="/assets/sponsors/sponsor3.png" alt="JAJABOR" class="w-[9rem]">
          <img src="/assets/sponsors/sponsor4.png" alt="Royal Enfield" class="w-[9rem]">
          <img src="/assets/sponsors/swaglok.png" alt="Swaglok" class="w-[9rem]">
        </div>
      </section>
  </div>
</Layout>

<style>
  body {
    overflow-x: hidden;
  }

  #sponsor-logo img{
    aspect-ratio: 2/2;
    object-fit: contain;
  }
  .h1custom {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  .instructions {
    line-height: 1.6;
    margin: 1rem 0;
    border: 2px solid whitesmoke;
    background-color: transparent;
    backdrop-filter: blur(10px);
    padding: 1rem;
    border-radius: 0.4rem;
  }
  #right-col {
    grid-template-areas:
      "left right"
      "left bottom";
  }
  .card1 {
    grid-area: left;
    background-image: url('/assets/party.jpg');
    background-position: -50px -160px;
    background-repeat: no-repeat;
    filter: grayscale(40%);
  }
  .card2{
     background-image: url('/assets/contest.jpg');
     background-position: -50px -130px;
     filter: grayscale(40%);
  }
  .card3{
     background-image: url('/assets/football.jpg');
     background-position: -50px -150px;
     filter: grayscale(40%);
  }
 
  /*PreDefined */
  .link-card {
    list-style: none;
    display: flex;
    padding: 0.25rem;
    object-fit: contain;
    background-color: white;
    background-size: 150%;
    border: 4px solid black;
    border-radius: 0.6rem;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    transition: background-size 0.2s ease-in-out;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -2px rgba(0, 0, 0, 0.1);
  }
  .link-card > a {
    width: 100%;
    border: 2px solid black;
    text-decoration: none;
    line-height: 1.4;
    padding: 1rem 1.3rem;
    border-radius: 0.35rem;
    color: #111;
    background-color: white;
    opacity: 0.8;
  }
  .link-card > h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  .link-card > p {
    margin-top: 0.5rem;
    margin-bottom: 0;
    color: #444;
  }
  .link-card:is(:hover, :focus-within) {
    /* background-position: 0%; */
    background-size: 170%;
  }
  .link-card:is(:hover, :focus-within) h2 {
    color: #3b82f6;
  }

  #background-img{
		position: fixed;
		top: 0;
		bottom: 0;
		height: 100vh;
		width: 100%;
		background-image: url("/assets/party3.jpg");
		background-size: cover;
		background-repeat: no-repeat;
		object-fit: contain;
		background-position: center;
		filter: grayscale(30%);
	}
</style>
