---
import NonHomeLayout from "../layouts/NonHomeLayout.astro";
---

<NonHomeLayout>
  <div id="background-img" class="-z-30"></div>
  <div
    id="wrapper"
    class="w-full mx-auto md:max-w-[1300px] mt-16 md:mt-[5em] px-2 md:px-10"
  >
    <h1 class="text-5xl font-playfair text-center text-slate-100 pb-10">
      Contact Us
    </h1>

    <main>
      <div class="bg-white rounded-lg max-w-7xl mx-auto sm:px-6 lg:px-8 py-6">
        <form
          id="contact-form"
          action="https://formspree.io/f/xwkjbobw"
          method="POST"
          class=""
        >
          <div class="mb-4">
            <label for="name" class="sr-only">Name</label>
            <input
              type="text"
              name="name"
              id="name"
              placeholder="Name"
              required
              class="bg-slate-900 w-full py-2 px-4 rounded-md border-gray-300 focus:ring-offset-2 focus:outline-none focus:ring-2 focus:ring-slate-900 focus:border-transparent text-white"
            />
          </div>
          <div class="mb-4">
            <label for="email" class="sr-only">Email</label>
            <input
              type="email"
              name="email"
              id="email"
              placeholder="Email"
              required
              class="bg-slate-900 w-full py-2 px-4 rounded-md border-gray-300 focus:ring-offset-2 focus:outline-none focus:ring-2 focus:ring-slate-900 focus:border-transparent text-white"
            />
          </div>
          <div class="mb-4">
            <label for="message" class="sr-only">Message</label>
            <textarea
              name="message"
              id="message"
              rows="5"
              placeholder="Message"
              required
              class="bg-slate-900 w-full py-2 px-4 rounded-md border-gray-300 focus:ring-offset-2 focus:outline-none focus:ring-2 focus:ring-slate-900 focus:border-transparent text-white"
            ></textarea>
          </div>
          <div class="text-right">
            <button
              type="submit"
              class="flex justify-center items-center bg-slate-900 text-white hover:bg-slate-400 hover:text-black font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition-all duration-300 ease-in-out"
              >Submit</button
            >
          </div>
        </form>
      </div>
    </main>
  </div>
</NonHomeLayout>

<style>
  #background-img {
    position: fixed;
    top: 0;
    bottom: 0;
    height: 100vh;
    width: 100%;
    background-image: url("/assets/space3.jpg");
    background-size: cover;
    background-repeat: no-repeat;
    object-fit: cover;
    background-position: center;
    filter: grayscale(30%);
    filter: brightness(80%);
  }
</style>
