---
import NonHomeLayout from "../layouts/NonHomeLayout.astro";
---

<NonHomeLayout>
  <div id="background-img" class="-z-30"></div>
  <div
    id="wrapper"
    class="w-full mx-auto md:max-w-[1300px] mt-16 md:mt-[5em] px-2 md:px-10"
  >
    <h1 class="text-5xl font-playfair text-center text-slate-100">
      Contact Us
    </h1>

    <main>
      <div class="grid grid-cols-2 gap-4 space-x-10">
        <div class="p-8">
          <h1 class="text-2xl font-bold mb-4">Contact Us</h1>

          <!-- Contact Form -->
          <form
            id="contact-form"
            action="https://formspree.io/f/xwkjbobw"
            method="POST"
          >
            <div class="mb-4">
              <label for="name" class="sr-only">Name</label>
              <input
                type="text"
                name="name"
                id="name"
                placeholder="Name"
                required
                class="w-full py-2 px-4 rounded-md border-gray-300 focus:outline-none focus:ring-2 focus:ring-yellow-600 focus:border-transparent"
              />
            </div>
            <div class="mb-4">
              <label for="email" class="sr-only">Email</label>
              <input
                type="email"
                name="email"
                id="email"
                placeholder="Email"
                required
                class="w-full py-2 px-4 rounded-md border-gray-300 focus:outline-none focus:ring-2 focus:ring-yellow-600 focus:border-transparent"
              />
            </div>
            <div class="mb-4">
              <label for="message" class="sr-only">Message</label>
              <textarea
                name="message"
                id="message"
                rows="5"
                placeholder="Message"
                required
                class="w-full py-2 px-4 rounded-md border-gray-300 focus:outline-none focus:ring-2 focus:ring-yellow-600 focus:border-transparent"
              ></textarea>
            </div>
            <div class="text-right">
              <button
                type="submit"
                class="inline-flex items-center bg-yellow-600 text-white hover:bg-yellow-400 hover:text-gray-700 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition-all duration-300 ease-in-out"
                >Submit</button
              >
            </div>
          </form>
        </div>

        <!-- Ecstasy Logo -->
        <div class="p-8">
          <img
            src="../public/assets/logo/logo1.png"
            alt="Ecstasy Logo"
            class="max-w-full h-auto"
          />
        </div>
      </div>
      <!-- Map to College -->
      <section class="py-10 rounded-lg">
        <div class="container mx-auto px-4">
          <h2
            class="text-slate-100 mb-4 text-center pb-10 font-playfair text-5xl font-light"
          >
            Our Location
          </h2>

          <div class="w-full h-96 rounded-lg border-2">
            <iframe
              class="w-full h-full rounded-lg"
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3571.3070762469947!2d90.30044981545717!3d26.478055985039564!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3758f4d277d13e8d%3A0x233749495bfdb465!2sCentral%20Institute%20of%20Technology%2C%20Kokrajhar!5e0!3m2!1sen!2sin!4v1677676861572!5m2!1sen!2sin"
              width="600"
              height="450"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"></iframe>
          </div>
        </div>
      </section>
    </main>
  </div>
</NonHomeLayout>

<style>
  #background-img {
    position: fixed;
    top: 0;
    bottom: 0;
    height: 100vh;
    width: 100%;
    background-image: url("/assets/space3.jpg");
    background-size: cover;
    background-repeat: no-repeat;
    object-fit: cover;
    background-position: center;
    filter: grayscale(30%);
    filter: brightness(80%);
  }
</style>
